@model IEnumerable<Razor.WebApplication.Models.TestUser>

<div class="col-md-4">
    <table class="table table-bordered table-sm">
        <thead class="thead-light">
            <tr>
                <th>First Name</th>
                <th>Last Name </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
            <tr>
                <td>
                    @user.FirstName
                </td>
                <td>
                    @user.LastName
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id=@user.Level>Add</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

